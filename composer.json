{
    "name": "autowp/zf-components",
    "description": "ZF Components",
    "license": "mit",
    "authors": [
        {
            "name": "Dmitry",
            "email": "dmitry@pereslegin.ru",
            "homepage": "http://pereslegin.ru"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "ext-iconv": "*",
        "ext-mbstring": "*",
        "zendframework/zend-mvc": ">=3.0",
        "zendframework/zend-json": ">=3.0",
        "zendframework/zend-mail": ">=2.7",
        "zendframework/zend-filter": ">=2.7"
    },
    "suggest" : {
        "rollbar/rollbar": "^1.3, To use rollbar error listener",
        "ext-intl": "*, To use transliteration filter",
        "zendframework/zend-i18n": ">=2.7, To use transliteration filter",
        "zendframework/zend-db": "^2.8, To use TableManger"
    },
    "autoload": {
        "psr-4": {
            "Autowp\\ZFComponents\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/PHPUnit": "^6.0",
        "satooshi/php-coveralls": "^1.0",
        "codeclimate/php-test-reporter": "dev-master",
        "zendframework/zend-coding-standard": "~1.0.0",
        "phpmd/phpmd": "^2.6"
    },
    "autoload-dev": {
        "psr-4": {
            "AutowpTest\\ZFComponents\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@phpmd",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "phpmd" : "phpmd src,test text ruleset.xml --suffixes php"
    }
}
